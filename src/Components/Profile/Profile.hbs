<div class='fullscreen-container'>
    <div class='center-container'>
        <div class='profile'>
            <h2 class='text_center'>Профиль</h2>
            <div class='flex_center'>
                <picture >
                    <source srcset={{avatar}} />
                    <img id='profile-avatar' src="img/avatar.jpg" alt='Не удалось загрузить фотографию профиля'/>
                </picture>
            </div>
            <p class='text_center profile_field' id='profile__name'>{{name}} {{surname}}</h4>
            <p class='text_center profile_field' id='profile__username'>{{username}}</h4>
            <p class='text_center profile_field' id='profile__email'>{{email}}</h4>
            <p class='text_center profile_description' id='profile__about'>{{about}}</p>
        </div>
    </div>
</div>