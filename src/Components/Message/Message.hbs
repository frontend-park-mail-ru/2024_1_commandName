<div class="message {{message_owner}}" id="message_id_{{message_id}}">
    <div class="author">
        <strong>{{username}}</strong>
    </div>
    <div class="message_data">
        {{message_text}}
        <text class="time">{{sent_at}}</text>
    </div>
    <div id="ContextMenu" style="display: none;">
        <button
            class='delete-button'
            id='delete-message-button_{{message_id}}'
        >Удалить</button>
        <button class='edit-button' id='edit-message-button_{{id}}'>
            Изменить
        </button>
    </div>
</div>