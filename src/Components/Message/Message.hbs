<div class='message {{#if is_my_message}}my_message{{/if}}' id='message_id_{{message_id}}'>
    <div class='author'>
        <strong>{{username}}</strong>
    </div>

    <div class='message_data'>
        {{#if file}}
            <a href='{{file.path}}' download>{{file.original_name}}</a>
        {{/if}}

        {{#if sticker_path}}
            <video
                class='message_sticker'
                src='{{sticker_path}}'
                onmouseover='this.play()'
                onmouseout='this.pause();this.currentTime=0;'
            />
        {{/if}}

        <div class='message_text_wrapper'>
            <span class='message_text'>{{message_text}}</span>
            <input
                type='text'
                class='edit_message_input'
                style='display: none;'
            />
        </div>
    </div>

    <button class='inline_button origin-button hidden'>Назад</button>
    <text class='time'>{{sent_at}}</text>
    {{#if edited}}
        <text class='time'>изменено</text>
    {{/if}}

    <div class='messageModal hidden'>
        {{#if is_my_message}}
            <button
                class='delete-button'
                id='delete-message-button_{{message_id}}'
            >
                Удалить
            </button>
            <button class='edit-button' id='edit-message-button_{{message_id}}'>
                Изменить
            </button>
        {{else}}
            <button
            class='translate-button'
            id='translate-message-button_{{message_id}}'
            >
                Перевести
            </button>
            <button class='shortly-button' id='shortly-message-button_{{message_id}}'>
                Кратко
            </button>
        {{/if}}
    </div>
</div>